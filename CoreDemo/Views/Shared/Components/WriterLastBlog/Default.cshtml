@using EntityLayer.Concrete
  
@model List<Blog> 

<div class="tech-btm">
                            <h4>Yazarın Son Yazıları</h4>

                          @foreach(var i in Model)
                          {
                               <div class="blog-grids row mb-3">
                                <div class="col-md-5 blog-grid-left">
                                    <a href="single.html">
                                        <img src="@i.BlogImage" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="col-md-7 blog-grid-right">

                                    <h5>
                                        <a href="single.html">@i.BlogTitle</a>
                                       
                                    </h5>
                                   
                                    <div class="sub-meta">
                                        <span>
                                            <i class="far fa-clock"></i> @(((DateTime)i.BlogCreateDate).ToString("dd-MM-yyyy"))
                                        </span>
                                    </div>
                                </div>

                            </div>
    }

                        </div>
