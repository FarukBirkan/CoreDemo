@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table>
    <tr>
        <th>Id</th>
        <th>Kategori Adı</th>
        <th>Durumu</th>
        
    </tr> 
   
    @foreach(var item in Model)
    {
       <tr>
        <th>@item.CategoryId</th>
        <th>@item.CategoryName</th>
        @if (@item.CategoryStatus == true)
        {
            <th>Kullanımda</th>
        }
        else
        {
            <th>Kullanım Dışı</th>
        }
      </tr>
    } 
</table>

